
<div ng-controller="NewsController">
 Search: <input ng-model="query">

Sort by:

<select ng-model="orderProp">
  <option value="title">Alphabetical</option>
  <option value="-title">Newest</option>
</select>

{{title}}
<ul ng-repeat="data in news | filter:query | orderBy:orderProp ">
    <li >
      <h3>{{data.title}}</h3>
      <p>{{data.text}}</p>
      <a class="btn "  href="pagenews?id={{data.id}}">Read more ..</a>
    </li>
  </ul>

</div>



 